<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="wizad_crud.manager.class">Wizad\CrudBundle\Crud\Crud</parameter>

        <parameter key="wizad_crud.twig.crud_extension.class">Wizad\CrudBundle\Twig\CrudExtension</parameter>
    </parameters>

    <services>
        <service id="wizad_crud.manager" class="%wizad_crud.manager.class%" abstract="true">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="wizad_crud.twig.crud_extension" class="%wizad_crud.twig.crud_extension.class%">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
    </services>

</container>
